<h1>Editing promise</h1>

<% form_for(@promise) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <%= f.hidden_field :person_id %>
  <p>
    <%= f.label :expiry_date %><br />
    <%= f.datetime_select :expiry_date %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Back', promises_path %>
